<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">#F44336</item>
        <item name="android:textColorSecondary">#D32F2F</item>
        <item name="android:colorPrimaryDark">#D32F2F</item>
        <item name="android:colorAccent">#FF5252</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:navigationBarColor">#F44336</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowEnterTransition">@android:transition/slide_bottom</item>
        <item name="android:windowExitTransition">@android:transition/slide_bottom</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">#F44336</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>
</resources>
