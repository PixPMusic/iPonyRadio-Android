<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mm="http://millennialmedia.com/android/schema"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.iponyradio.android.PlayerActivity">

    <com.millennialmedia.android.MMAdView
        android:id="@+id/adView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        mm:width="320"
        mm:height="50"
        mm:apid="193467" />

    <TextView android:id="@+id/player_station_name"
        android:layout_below="@+id/adView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:textColor="#000000"/>

    <TextView android:id="@+id/player_stream_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:textColor="#000000"
        android:layout_below="@+id/player_station_name"
        android:layout_alignParentStart="true" />

    <TextView android:id="@+id/player_stream_url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:textColor="#000000"
        android:layout_below="@+id/player_stream_name"
        android:layout_alignParentStart="true" />

    <com.iponyradio.android.PlayPauseView
        android:id="@+id/play_pause_view"
        android:layout_width="72dip"
        android:layout_height="72dip"
        android:clickable="true"
        android:foreground="?android:selectableItemBackground"
        android:stateListAnimator="@anim/button_elevation"
        android:padding="16dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp" />
</RelativeLayout>
