<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iponyradio.androidrelease" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainPicker"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Single List Item Activity -->
        <activity
            android:name=".SingleStationActivity"
            android:label="Contact" >
        </activity>
        <activity
            android:name=".PlayerActivity"
            android:label="@string/title_activity_player"
            android:parentActivityName=".SingleStationActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.iponyradio.androidrelease.SingleStationActivity" />
        </activity>
        <service android:name=".BackgroundService"/>
    </application>

</manifest>
